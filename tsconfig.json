{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "allowJs": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "baseUrl": ".",
    "files": [
      "src/globals.d.ts"
    ],
    "paths": {
      "$/*": [
        "src/*"
      ],
      "$routes/*": [
        "src/routes/*"
      ],
      "$data/*": [
        "src/data/*"
      ],
      "$components/*": [
        "src/components/*"
      ]
    },
    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  }
}
